{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "compileOnSave": false,
  "include": [
    "src",
    "tests/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
